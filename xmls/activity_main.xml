<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainPortrait"
    tools:context=".MainActivity"
    android:background="@color/Celeste">



    <TextView
        android:id="@+id/textHeading"
        android:layout_width="268dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:text="Quantity Measurement"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/convert"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="29dp"
        android:text="Convert Quantities"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:onClick="loadConvertFragment"
        android:backgroundTint="@color/Ultramarine_blue"
        app:layout_constraintBottom_toTopOf="@+id/flFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHeading"
/>


    <Button
        android:id="@+id/addButton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="29dp"
        android:text="Add Quantities"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:onClick="loadAddFragment"
        android:backgroundTint="@color/Folly"
        app:layout_constraintBottom_toTopOf="@+id/flFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHeading"
   />
    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="0dp"
        android:layout_height="488dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
